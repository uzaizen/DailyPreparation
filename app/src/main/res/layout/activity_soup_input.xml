<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".soupInputActivity">

    <TextView
        android:id="@+id/SoupRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="スープ必要量＝"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/souprequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="スープ必要量"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/SoupRequired"
        app:layout_constraintStart_toEndOf="@+id/SoupRequired"/>

    <TextView
        android:id="@+id/Remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="16dp"
        android:text = "残量"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/SoupRequired"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/TodayVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本日量"
        android:textSize="18sp"
        android:layout_marginStart="180dp"
        app:layout_constraintTop_toTopOf="@id/Remaining"
        app:layout_constraintStart_toEndOf="@id/Remaining"/>

    <TextView
        android:id="@+id/TomatoSoup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="トマトスープ"
        android:textSize="18sp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@id/SoupRequired"
        app:layout_constraintTop_toBottomOf="@id/Remaining" />

    <EditText
        android:id="@+id/tomatoremaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="トマト残量"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/Remaining"
        app:layout_constraintTop_toTopOf="@id/TomatoSoup" />

    <Button
        android:id="@+id/tomatoremainingbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="入力"
        app:layout_constraintStart_toEndOf="@id/tomatoremaining"
        app:layout_constraintTop_toTopOf="@id/TomatoSoup" />

    <EditText
        android:id="@+id/tomatotoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本日トマト"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/TodayVolume"
        app:layout_constraintTop_toTopOf="@id/TomatoSoup" />

    <TextView
        android:id="@+id/CreamSoup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="クリームスープ"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/TomatoSoup"
        app:layout_constraintStart_toStartOf="@id/SoupRequired"/>

    <EditText
        android:id="@+id/creamremaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="クリーム残量"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/Remaining"
        app:layout_constraintTop_toTopOf="@id/CreamSoup" />

    <EditText
        android:id="@+id/creamtoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本日クリーム"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/TodayVolume"
        app:layout_constraintTop_toTopOf="@id/CreamSoup" />

    <TextView
        android:id="@+id/Pumpkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="カボチャスープ"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/CreamSoup"
        app:layout_constraintStart_toStartOf="@id/SoupRequired"/>

    <EditText
    android:id="@+id/pumpkinremaining"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="カボチャ残量"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="@id/Remaining"
    app:layout_constraintTop_toTopOf="@id/Pumpkin" />

    <EditText
        android:id="@+id/pumpkintoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本日カボチャ"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/TodayVolume"
        app:layout_constraintTop_toTopOf="@id/Pumpkin" />

</androidx.constraintlayout.widget.ConstraintLayout>
